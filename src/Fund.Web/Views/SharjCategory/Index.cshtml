
@model IEnumerable<Fund.Web.Models.SharjCategory>

@{
    ViewBag.Title = "SharjCategory";

  int pagenumber = ViewBag.page ?? 1;

}

<p>
    @Html.ActionLink("رکورد جدید", "Create",null, new {@class="btn green"})
</p>





<table class="table striped bordered hoverable" >
    <tr>
       
        <th>
          @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Sharjs)
        </th>
 <th></th>

    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
			@item.CategoryName
        </td>
        <td>
			@item.OrderId
        </td>
        <td>
			@(item.Sharjs == null ? "None" : item.Sharjs.Count.ToString())
        </td>

        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.ID }, new {@class="btn blue"})
            @Html.ActionLink("مشاهده", "Details", new { id=item.ID },  new {@class="btn green"})
            @Html.ActionLink("حذف", "Delete", new { id=item.ID }, new {@class="btn red"})
        </td>


    </tr>
}

</table>



    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new
{
    page,
	    CategoryName = Request.QueryString["CategoryName"]  , 	    OrderId = Request.QueryString["OrderId"]  , 	    Sharjs = Request.QueryString["Sharjs"] 	
}))


